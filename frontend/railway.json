{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "watchPatterns": ["src/**"]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run preview -- --host 0.0.0.0 --port ${PORT:-3000}",
    "restartPolicyType": "ON_FAILURE"
  }
}
