# YogaFlow Backend Environment Configuration
# Copy this file to .env and update with your values
# NEVER commit .env file to version control

# Application
APP_NAME="YogaFlow API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Database
# For development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./yogaflow.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/yogaflow

# Redis (for token blacklist and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=optional_redis_password

# Security - JWT
# Generate secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Security - Password
BCRYPT_ROUNDS=12  # Must be >= 12

# CORS - Allowed Origins (comma-separated)
# SECURITY: In production, set this to your actual frontend domain(s)
# Example for production: ALLOWED_ORIGINS=https://yogaflow.app,https://www.yogaflow.app
# Localhost entries are automatically filtered in production environment
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,Origin,X-Requested-With

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or console

# Email Configuration
# For development: Use Mailtrap (https://mailtrap.io/)
# For production: Use SendGrid, Mailgun, or AWS SES
EMAIL_ENABLED=true
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
SMTP_TLS=true
SMTP_SSL=false
EMAIL_FROM=noreply@yogaflow.app
EMAIL_FROM_NAME=YogaFlow
# Base URL for email verification links
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=5

# CDN Configuration
# For local development with nginx
CDN_ENABLED=false
CDN_BASE_URL=http://localhost
# For production with CloudFlare
# CDN_ENABLED=true
# CDN_BASE_URL=https://cdn.yogaflow.app
